---
export interface Props {
    title: string;
    body: string;
    href: string;
}

const {date, title, body} = Astro.props;
---

<div class="flex flex-col items-center justify-center cursor-pointer gap-4">
    <p class="text-neutral-400 uppercase tracking-widest text-base font-semibold">
        {title}
    </p>
    <p class="text-3xl text-neutral-400 hover:text-neutral-800 transition duration-400 ease-in-out">
        {body}
    </p>
    <p class="text-neutral-400">
        {date}
    </p>
</div>

