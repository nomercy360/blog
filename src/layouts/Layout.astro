---
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	@font-face {
		font-family: 'PPEditorialNew';
		src: url('/fonts/PPEditorialNew-Regular.woff2') format('woff2'),
		url('/fonts/PPEditorialNew-Regular.woff') format('woff'),
		url('/fonts/PPEditorialNew-Regular.ttf') format('truetype'),
		url('/fonts/PPEditorialNew-Regular.otf') format('opentype'),
		url('/fonts/PPEditorialNew-Regular.eot') format('embedded-opentype');
		font-style: normal;
		font-display: swap;
	}

	body {
		font-family: 'PPEditorialNew', sans-serif;
		font-weight: 400;
	}
</style>
